<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_210</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:progressBackgroundTint">@color/purple_210</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="buttomPost">
        <item name="backgroundTint">#801157</item>
        <item name="rippleColor">#651391</item>
    </style>

    <style name="progressBar">
        <item name="colorAccent">@color/purple_210</item>
    </style>

    <style name="progressBarImgsGrid">
        <item name="colorAccent">#2196F3</item>
    </style>

    <style name="progressBarSearch">
        <item name="colorAccent">@color/colorSilverProgrss</item>
    </style>


    <style name="Theme.Instagram.MainActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="minTouchTargetSize">21dp</item>
        <item name="minHeight">21dp</item>
        <item name="rippleColor">@color/teal_750</item>
        <item name="colorAccent">@color/colorBlueWhite</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionBarStyle">@color/white</item>

        <!-- Customize your theme here. -->
    </style>
</resources>