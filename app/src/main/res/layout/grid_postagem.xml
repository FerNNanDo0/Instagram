<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewGridPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/padrao" />

    <ProgressBar
        android:id="@+id/progressBarGridPerfil"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/progressBarImgsGrid"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGridPerfil"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGridPerfil"
        app:layout_constraintStart_toStartOf="@+id/imageViewGridPerfil"
        app:layout_constraintTop_toTopOf="@+id/imageViewGridPerfil" />
</androidx.constraintlayout.widget.ConstraintLayout>